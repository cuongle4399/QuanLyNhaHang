<UserControl x:Class="restaurantManager.View.Fuction.Staff.confirmPayFood"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:restaurantManager.View.Fuction.Staff"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- ======================
     Resources: brushes & styles (đã thêm)
     ====================== -->
    <UserControl.Resources>
        <!-- Material Design Brushes -->
        <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#2980B9"/>
        <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#21618C"/>
        <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="White"/>

        <!-- Card style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" BlurRadius="15" ShadowDepth="5" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Circle button -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Stroke="Transparent" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary rounded button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="20" 
                            BorderThickness="0"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pill button (filled) -->
        <Style x:Key="PillButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="16"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pill button (outlined) -->
        <Style x:Key="PillOutlinedButtonStyle" TargetType="Button" BasedOn="{StaticResource PillButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Table card -->
        <Style x:Key="TableCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Rounded TextBox -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ======================
     Layout chính
     ====================== -->
    <Grid  x:Name="RootGrid" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main -->
        </Grid.RowDefinitions>

        <!-- Header: Title + Search -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="XÁC NHẬN THANH TOÁN"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#3498DB"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"
                   Padding="0,0,100,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" DockPanel.Dock="Right" Width="Auto">
                <TextBox x:Name="TxtSearchTable"
                     Width="260" Height="32"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Text="Nhập số bàn cần tìm..." />

                <Button x:Name="BtnSearchTable" Content="🔍"
                    Style="{StaticResource CircleButtonStyle}"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"/>
            </StackPanel>
        </Grid>

        <!-- Main content: left = danh sách bàn, right = chi tiết đơn -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- left column -->
                <ColumnDefinition Width="*"/>
                <!-- right column -->
            </Grid.ColumnDefinitions>

            <!-- LEFT: Danh sách bàn -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="DANH SÁCH BÀN" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl x:Name="icBanAn" ItemsSource="{Binding DanhSachBanAn}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="TableBorder"
                                            Style="{StaticResource TableCardStyle}"
                                            BorderThickness="2"
                                            BorderBrush="Transparent">

                                        <!-- Gắn sự kiện MouseDown vào Command -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDown">
                                                <i:InvokeCommandAction 
                                                    Command="{Binding DataContext.ChonBanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <Grid>
                                            <Ellipse x:Name="TableEllipse" Width="50" Height="50" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding MaBan}" 
                                                       Foreground="White" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <DataTemplate.Triggers>
                                        <!-- Bàn trống => xanh nhạt -->
                                        <DataTrigger Binding="{Binding TrangThai}" Value="Trống">
                                            <Setter TargetName="TableEllipse" Property="Fill" Value="LightGreen"/>
                                        </DataTrigger>

                                        <!-- Bàn đã đặt => đỏ -->
                                        <DataTrigger Binding="{Binding TrangThai}" Value="Đã đặt">
                                            <Setter TargetName="TableEllipse" Property="Fill" Value="Red"/>
                                        </DataTrigger>

                                        <!-- Khi được chọn => viền vàng -->
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter TargetName="TableBorder" Property="BorderBrush" Value="Gold"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- RIGHT: Thông tin đơn -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- header -->
                        <RowDefinition Height="*"/>
                        <!-- list -->
                        <RowDefinition Height="Auto"/>
                        <!-- footer -->
                    </Grid.RowDefinitions>

                    <!-- Header info -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Thông tin đơn hàng" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>
                        <WrapPanel>
                            <TextBlock Text="Bàn: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding BanDangChon.MaBan, FallbackValue=—}" Margin="6,0"/>
                            <TextBlock Text="   "/>
                            <TextBlock Text="Nhân viên: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding DonHangCuaBan.MaNhanVien, FallbackValue=—}" Margin="6,0"/>
                        </WrapPanel>
                        <TextBlock Text="{Binding DonHangCuaBan.NgayDat, StringFormat='Ngày giờ: {0:dd/MM/yyyy HH:mm}', FallbackValue='Ngày giờ: —'}" Margin="0,6,0,0" Foreground="Gray"/>
                    </StackPanel>

                    <!-- Danh sách món (chi tiết hóa đơn) -->
                    <Border Grid.Row="1" Background="#2C3E50" CornerRadius="6" Padding="8">
                        <DataGrid x:Name="dgChiTietDonHang" 
                              ItemsSource="{Binding DanhSachChiTietCuaDonHang}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="0"
                              RowHeight="30"
                              SelectionMode="Single"
                              Margin="0,4">

                            <DataGrid.Columns>
                                <!-- Cột Tên món ăn -->
                                <DataGridTextColumn Binding="{Binding TenMonAn}" 
                                                Width="*" Header="Tên món ăn">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Cột Số lượng -->
                                <DataGridTextColumn Binding="{Binding SoLuong}" 
                                                Width="Auto"
                                                Header="Số lượng">
                                    
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Cột Tổng tiền -->
                                <DataGridTextColumn Binding="{Binding ThanhToanCuoi, StringFormat={}{0:N0} đ}" 
                                                Width="Auto" Header="Tổng tiền">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="20,0"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#3498DB"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Footer: tóm tắt + nút -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Border Background="#2C3E50" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="TỔNG CỘNG" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TongTienPhaiThanhToan, StringFormat={}{0:N0} đ}" Foreground="#3498DB" FontWeight="Bold"/>
                            </Grid>
                        </Border>



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnInHoaDon" Content="IN HÓA ĐƠN" Style="{StaticResource PillButtonStyle}" Width="120" Margin="5"/>
                            <Button x:Name="BtnHuy" Content="HỦY" Style="{StaticResource PillOutlinedButtonStyle}" Width="100" Margin="5" Command="{Binding HuyThanhToanCommand}"/>
                            <Button x:Name="BtnXacNhan" Content="XÁC NHẬN" Style="{StaticResource PrimaryButtonStyle}" Width="140" Margin="5" Command="{Binding XacNhanThanhToanCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
