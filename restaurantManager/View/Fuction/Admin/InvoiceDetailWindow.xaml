<Window x:Class="restaurantManager.View.Fuction.Admin.InvoiceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết hóa đơn" Height="600" Width="480" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="HÓA ĐƠN THANH TOÁN"
                 FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock x:Name="txtInfo" FontSize="14" Margin="0,0,0,10"/>

            <DataGrid x:Name="dgDetails"
                AutoGenerateColumns="False" 
                IsReadOnly="True" 
                CanUserAddRows="False"
                HeadersVisibility="Column" 
                GridLinesVisibility="All"
                CanUserResizeColumns="False"
                RowHeight="35" 
                ColumnHeaderHeight="40"
                AlternatingRowBackground="Lavender" 
                RowBackground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Món ăn"   Binding="{Binding TenMon}" Width="*"/>
                    <DataGridTextColumn Header="SL"       Binding="{Binding SoLuong}" Width="60"/>
                    <DataGridTextColumn Header="Đơn giá"  Binding="{Binding DonGia, StringFormat={}{0:N0} VNĐ}" Width="110"/>
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien, StringFormat={}{0:N0} VNĐ}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Margin="0,8,0,0">
                <TextBlock x:Name="txtSubtotal"     FontSize="14" TextAlignment="Right"/>
                <TextBlock x:Name="txtDiscountLine" FontSize="14" TextAlignment="Right"/>
                <TextBlock x:Name="txtDiscountOrd"  FontSize="14" TextAlignment="Right"/>
            </StackPanel>

            <TextBlock x:Name="txtTotal" FontSize="16" FontWeight="Bold"
                 TextAlignment="Right" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>
