<UserControl x:Class="restaurantManager.View.Fuction.Admin.staffManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#2E2E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0"
                   Text="QUẢN LÝ NHÂN VIÊN"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FFD700"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" x:Name="DgNhanVien"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#3C3C3C"
                  RowBackground="#2E2E2E"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="Gray" BorderThickness="1"
                  Margin="10,0,10,15"
                  IsReadOnly="True"
                  ItemsSource="{Binding DgNhanVien}"
                  SelectionChanged="DgNhanVien_SelectionChanged"
                  Foreground="White"
                  Background="#2E2E2E">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#2E2E2E"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="*"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh}" Width="*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding SoDienThoai}" Width="*"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*"/>
                <DataGridTextColumn Header="Lương" Binding="{Binding Luong}" Width="*"/>
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding ChucVu}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form nhập liệu -->
        <Border Grid.Row="2" Background="#3C3C3C" Padding="10">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="Control">
                        <Setter Property="Margin" Value="0,5"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                        <Setter Property="Background" Value="#555"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </StackPanel.Resources>

                <!-- Lưới 2 cột -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột 1 -->
                    <StackPanel Grid.Column="0" Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Mã nhân viên:"/>
                            <TextBox x:Name="txtMaNhanVien" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Họ tên:"/>
                            <TextBox x:Name="txtHoTen" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Ngày sinh:"/>
                            <DatePicker x:Name="dpNgaySinh" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="SĐT:"/>
                            <TextBox x:Name="txtSoDienThoai" Width="180"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Cột 2 -->
                    <StackPanel Grid.Column="1" Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Địa chỉ:"/>
                            <TextBox x:Name="txtDiaChi" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Lương:"/>
                            <TextBox x:Name="txtLuong" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Chức vụ:"/>
                            <TextBox x:Name="txtChucVu" Width="180"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Trạng thái:"/>
                            <ComboBox x:Name="cbTrangThai" Width="180">
                                <ComboBoxItem Content="Đang làm"/>
                                <ComboBoxItem Content="Nghỉ việc"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Nút chức năng -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Thêm" Width="70" Margin="5" Background="#28A745" Foreground="White" Click="Them_Click"/>
                    <Button Content="Sửa" Width="70" Margin="5" Background="#FFC107" Foreground="Black" Click="Sua_Click_1"/>
                    <Button Content="Đuổi" Width="70" Margin="5" Background="#DC3545" Foreground="White" Click="Xoa_Click_2"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
