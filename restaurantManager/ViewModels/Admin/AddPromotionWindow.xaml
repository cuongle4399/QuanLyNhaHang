<Window x:Class="restaurantManager.View.AddPromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="650" Width="550"
        Background="#2E2E2E" Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ KHUYẾN MÃI" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Tên chương trình -->
        <TextBlock Text="Tên chương trình:" Grid.Row="1" Margin="0,0,0,5"/>
        <TextBox Text="{Binding TenChuongTrinh, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                 materialDesign:HintAssist.Hint="Nhập tên chương trình" 
                 Grid.Row="2" Margin="0,0,0,15"/>

        <!-- Mã giảm giá -->
        <TextBlock Text="Mã giảm giá:" Grid.Row="3" Margin="0,0,0,5"/>
        <TextBox Text="{Binding MaCode, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                 materialDesign:HintAssist.Hint="Nhập mã giảm giá (VD: FOOD10)" 
                 Grid.Row="4" Margin="0,0,0,15"/>

        <!-- Loại giảm giá -->
        <TextBlock Text="Loại giảm giá:" Grid.Row="5" Margin="0,0,0,5"/>
        <ComboBox SelectedItem="{Binding LoaiGiamGia}" 
                  Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                  Grid.Row="6" Margin="0,0,0,15">
            <ComboBoxItem Content="Giảm %" Tag="PhanTram"/>
            <ComboBoxItem Content="Giảm tiền" Tag="TienCoDinh"/>
        </ComboBox>

        <!-- Giá trị giảm -->
        <TextBlock Text="Giá trị giảm:" Grid.Row="7" Margin="0,0,0,5"/>
        <TextBox Text="{Binding GiaTriGiam, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                 materialDesign:HintAssist.Hint="Nhập giá trị (VD: 10 hoặc 50000)" 
                 Grid.Row="8" Margin="0,0,0,15"/>

        <!-- Ngày bắt đầu -->
        <TextBlock Text="Ngày bắt đầu:" Grid.Row="9" Margin="0,0,0,5"/>
        <DatePicker SelectedDate="{Binding NgayBatDau}" 
                    Style="{StaticResource MaterialDesignDatePicker}" 
                    Grid.Row="10" Margin="0,0,0,15"/>

        <!-- Ngày kết thúc -->
        <TextBlock Text="Ngày kết thúc:" Grid.Row="11" Margin="0,0,0,5"/>
        <DatePicker SelectedDate="{Binding NgayKetThuc}" 
                    Style="{StaticResource MaterialDesignDatePicker}" 
                    Grid.Row="12" Margin="0,0,0,15"/>

        <!-- Số lượt tối đa -->
        <TextBlock Text="Số lượt tối đa (để trống nếu không giới hạn):" Grid.Row="13" Margin="0,0,0,5"/>
        <TextBox Text="{Binding SoLuotSuDungToiDa}" 
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                 materialDesign:HintAssist.Hint="Số lượt (VD: 50)" 
                 Grid.Row="14" Margin="0,0,0,15"/>

        <!-- Danh sách món ăn -->
        <TextBlock Text="Áp dụng cho món ăn:" Grid.Row="15" Margin="0,0,0,5"/>
        <ScrollViewer Grid.Row="16" Margin="0,0,0,15" MaxHeight="150">
            <ItemsControl ItemsSource="{Binding MonAnList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding TenMonAn}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Nút hành động -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="17" Margin="0,20,0,0">
            <Button Content="Hủy" Style="{StaticResource MaterialDesignFlatButton}" 
                    Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="Lưu" Style="{StaticResource MaterialDesignRaisedButton}" 
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>